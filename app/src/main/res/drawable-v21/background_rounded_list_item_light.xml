<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="@color/list_item_selected_light">
    <item>
        <selector>
            <!-- Checked -->
            <item android:state_checked="true">
                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <stroke android:width="1dp" android:color="@color/list_item_selected_light"/>
                    <solid android:color="@color/list_item_selected_light"/>
                    <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp"/>
                    <corners android:topLeftRadius="43.5dp" android:topRightRadius="43.5dp" android:bottomLeftRadius="43.5dp" android:bottomRightRadius="43.5dp"/>
                </shape>
            </item>

            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <stroke android:width="1dp" android:color="@color/list_item_background_light"/>
                    <solid android:color="@color/list_item_background_light"/>
                    <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp"/>
                    <corners android:topLeftRadius="43.5dp" android:topRightRadius="43.5dp" android:bottomLeftRadius="43.5dp" android:bottomRightRadius="43.5dp"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>