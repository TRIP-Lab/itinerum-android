<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Unchecked and pressed -->
    <item android:state_pressed="true"
          android:state_checked="false"
          android:color="@color/button_text_dark_pressed" />

    <!-- Checked and pressed -->
    <item android:state_pressed="true"
          android:state_checked="true"
          android:color="@color/button_text_light" />

    <!-- Checked -->
    <item android:state_checked="true"
          android:color="@color/button_text_dark_checked"/>

    <!-- Default color -->
    <item android:color="@color/button_text_dark" />

</selector>