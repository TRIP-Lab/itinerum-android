<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatTextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/textview_prompt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Title.Small.PromptDetail"
        android:padding="@dimen/padding_large"
        />

    <ca.itinerum.android.PromptDialogSelectableRecyclerView
        android:id="@+id/view_prompt_dialog_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="0dp"
        android:divider="@android:color/transparent"
        android:paddingBottom="@dimen/padding_large"
        app:dark_mode="false"/>

    <include layout="@layout/view_footer_shadow"/>

</merge>