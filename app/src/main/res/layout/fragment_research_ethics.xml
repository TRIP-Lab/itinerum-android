<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/itinerum_logo_text"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_margin="8dp"
            />

        <TextView
            android:text="@string/ethics_title"
            style="@style/LargeTitle"
            android:layout_margin="8dp"
            android:gravity="center"
            />

        <TextView
            android:text="@string/ethics_preamble"
            style="@style/EmphasisParagraph"
            android:layout_margin="8dp"
            />

        <TextView
            android:text="@string/ethics_body"
            style="@style/BodyParagraph"
            android:layout_margin="8dp"
            android:autoLink="email"
            />

        <TextView
            android:text="@string/ethics_postamble"
            style="@style/EmphasisParagraph"
            android:layout_margin="8dp"
            />

        <Button
            android:id="@+id/fragment_continue_button"
            android:layout_gravity="center_horizontal"
            android:text="@string/understand_button"
            android:layout_width="match_parent"
            style="@style/StockButton"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</ScrollView>