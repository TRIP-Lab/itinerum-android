<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <!--<item name="android:statusBarColor">@android:color/black</item>-->
        <!-- specify shared element transitions -->
        <item name="android:windowEnterTransition">@transition/window_fade</item>
        <item name="android:windowExitTransition">@transition/window_fade</item>
    </style>

    <style name="AppTheme.NoActionBar.Survey">
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@color/base</item>
        <item name="colorControlActivated">@color/list_item_indicator_enabled_dark</item>
        <item name="colorControlNormal">@color/list_item_indicator_enabled_dark</item>
        <item name="colorAccent">@color/survey_accent_colour</item>
        <item name="android:windowEnterTransition">@transition/window_fade</item>
        <item name="android:windowExitTransition">@transition/window_fade</item>
    </style>

    <style name="AppTheme.NoActionBar.Base">
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@color/base</item>
        <item name="colorControlActivated">@color/base</item>
        <item name="colorControlNormal">@color/list_item_indicator_enabled_dark</item>
        <item name="colorAccent">@color/accent_colour_dark</item>
        <item name="android:windowEnterTransition">@null</item>
        <item name="android:windowExitTransition">@null</item>
    </style>

    <style name="AppTheme.NoActionBar.PromptDetails">
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:statusBarColor">@color/base</item>
        <item name="colorControlActivated">@color/base</item>
        <item name="colorControlNormal">@color/list_item_indicator_enabled_dark</item>
        <item name="colorAccent">@color/accent_colour_dark</item>
        <item name="android:windowEnterTransition">@null</item>
        <item name="android:windowExitTransition">@null</item>
    </style>

    <style name="AppTheme.NoActionBar.Settings">
        <item name="android:statusBarColor">@color/base</item>
        <item name="android:colorControlActivated">@color/base</item>
        <item name="android:colorControlNormal">@color/base</item>
        <item name="android:colorAccent">@color/base</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

</resources>
